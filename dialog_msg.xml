<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialogdetails_window_bg"
    android:minWidth="280dip"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/dialog_msg_titleLinear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="3dp"
        android:paddingTop="20dp"
        android:gravity="center" >

        <ImageView
            android:id="@+id/dialog_msg_titleIV"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/dialog_msg_titleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/t_black3"
            android:textSize="18sp" />

    </LinearLayout>

    <View
        android:id="@+id/dialog_msg_titlelineV"
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="@color/v_line" />

    <LinearLayout
        android:id="@+id/dialog_msg_contentLinear"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dip" >

        <TextView
            android:id="@+id/dialog_msg_contentTV"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            android:background="@null"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/t_black3"
            android:textSize="17sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="@color/v_line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/dialog_msg_positiveTV"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/tv_ok"
            android:textSize="18sp" />

        <View
            android:id="@+id/dialog_msg_divlineV"
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="@color/v_line" />

        <TextView
            android:id="@+id/dialog_msg_negativeTV"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/t_black1"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>